{

  "name": "Tabo",
  "version": "1.0.0",
  "manifest_version": 2,

  "applications": {
      "gecko": {
          "id": "tabo@chunkhang.com"
      }
  },

  "developer": {
    "name": "Marcus Mu",
    "url": "https://github.com/chunkhang"
  },

  "description": "A minimalistic tab manager",
  "homepage_url": "https://github.com/chunkhang/tabo",
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage"
  ],

  "background": {
    "scripts": [
      "background/background.js"
    ]
  },

  "browser_action": {
    "default_title": "Tabo",
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg"
    }
  }


}
